// tsconfig.json
{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*","index.ts"],
  "exclude": ["node_modules", "src/__test__"]
}
